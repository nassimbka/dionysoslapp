<div class="wrapper-loading" data-skip-search="<%= params[:skip_search].present? %>" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(<%= image_path "homegifs/homegif.gif" %>);">

  <h1 class="hide" id="tagline-end-loading">Nous avons trouvé des soirées se rapprochant de vos réponses!</h1>

  <div class="loading-stepbar">
    <ul class="list-inline" id="ul-answer-loading">
      <% @answers.each do |answer| %>
        <li class="hide"><%= answer %></li>
      <% end %>
    </ul>
  </div>

  <%= link_to "#", class: "hide link-to-events" do %>
    Afficher les résultats
  <% end %>

  <div class="tagline-index-loading">
    <h1><%= image_tag "waiting-gifs/gear.gif"%> Analyse de vos réponses en cours...</h1>
    <h3>Merci de patienter quelques instants</h3>
  </div>

  <div class="impatient-gif" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(<%= image_path "waiting-gifs/waiting.gif" %>);">
  </div>

</div>

<div class="wrapper-index hide" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(<%= image_path "homegifs/homegif.gif" %>);">

  <%= link_to "#", class: "left-arrow" do %>
    <i class="fas fa-chevron-left arrow"></i>
  <% end %>

  <div class="primary-result result1">

    <div class="photo-result">
      <% if @events.first.category == "Cinéma" && @events.first.photo_url == "/design/images/mascotteNb.png" %>
      <%= cl_image_tag @events.first.venue.photo %>
      <% elsif @events.first.photo_url.present? %>
      <%= image_tag @events.first.photo_url %>
      <% else %>
      <%= cl_image_tag @events.first.venue.photo %>
      <% end %>
    </div>

    <div class="text-result">
      <h1><%= @events.first.name %></h1>
      <% if @events.first.category != nil %>
        <h2><%= @events.first.category.capitalize %> <% unless @events.third.category == "concert" %><%= @events.first.venue.name %></h2><% end %>
      <% end %>
      <% if @events.first.genre == "Film" %>
        <h3>Film d'Animation</h3>
      <% elsif @events.first.category == "Cinéma" %>
        <h3>Film - <%= @events.first.genre.capitalize %></h3>
      <% end %>
    </div>
    <div class="button-result">
      <%= link_to "Voir les détails", event_path(@events.first) %>
    </div>
  </div>

  <div class="primary-result hide result2">

    <div class="photo-result">
      <% if @events.second.category == "Cinéma" && @events.second.photo_url == "/design/images/mascotteNb.png" %>
      <%= cl_image_tag @events.second.venue.photo %>
      <% elsif @events.second.photo_url.present? %>
      <%= image_tag @events.second.photo_url %>
      <% else %>
      <%= cl_image_tag @events.second.venue.photo %>
      <% end %>
    </div>

    <div class="text-result">
      <h1><%= @events.second.name %></h1>
     <% if @events.second.category != nil %>
            <h2><%= @events.second.category.capitalize %> <% unless @events.third.category == "concert" %><%= @events.second.venue.name %></h2><% end %>
          <% end %>
      <% if @events.second.genre == "Film" %>
       <h3>Film d'Animation</h3>
      <% elsif @events.second.category == "Cinéma" %>
        <h3>Film - <%= @events.second.genre.capitalize %></h3>
      <% end %>
    </div>
    <div class="button-result">
      <%= link_to "Voir les détails", event_path(@events.second) %>
    </div>
  </div>

  <div class="primary-result hide result3">

    <div class="photo-result">
      <% if @events.third.category == "Cinéma" && @events.third.photo_url == "/design/images/mascotteNb.png" %>
      <%= cl_image_tag @events.third.venue.photo %>
      <% elsif @events.third.photo_url.present? %>
      <%= image_tag @events.third.photo_url %>
      <% else %>
      <%= cl_image_tag @events.third.venue.photo %>
      <% end %>
    </div>

    <div class="text-result">
      <h1><%= @events.third.name %></h1>
      <% if @events.third.category != nil %>
             <h2><%= @events.third.category.capitalize %> <% unless @events.third.category == "concert" %><%= @events.third.venue.name %></h2><% end %>
           <% end %>
      <% if @events.third.genre == "Film" %>
        <h3>Film d'Animation</h3>
      <% elsif @events.third.category == "Cinéma" %>
        <h3>Film - <%= @events.third.genre.capitalize %></h3>
      <% end %>
    </div>
    <div class="button-result">
      <%= link_to "Voir les détails", event_path(@events.third) %>
    </div>
  </div>

  <%= link_to "#", class: "right-arrow" do %>
    <i class="fas fa-chevron-right arrow"></i>
  <% end %>

</div>
